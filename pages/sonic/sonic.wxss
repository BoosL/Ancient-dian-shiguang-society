@import "../footer-template/footer-template.wxss";

page {
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  position: relative;
  background-image: url('http://bolaa.wauwo.net/WXimages/b1.png');
  background-size: 100% 100%;
}

.rule {
  position: absolute;
  right: 46rpx;
  top: 76rpx;
  width: 92rpx;
  height: 30rpx;
  border-bottom: 1px solid #fff;
  color: #fff;
  font-size: 22rpx;
}

.boxF, .boxS, .boxT, .overlay {
  width: 554rpx;
  height: 640rpx;
  overflow: hidden;
}

.boxF {
  position: absolute;
  top: 120rpx;
  left: 82rpx;
  transform: rotate(120deg);
  float: left;
  margin-left: 10px;
  -ms-transform: rotate(120deg);
  -moz-transform: rotate(120deg);
  -webkit-transform: rotate(120deg);
}

.boxS {
  transform: rotate(-60deg);
  -ms-transform: rotate(-60deg);
  -moz-transform: rotate(-60deg);
  -webkit-transform: rotate(-60deg);
}

.boxT {
  transform: rotate(-60deg);
  background: no-repeat 50% center;
  -ms-transform: rotate(-60deg);
  -moz-transform: rotate(-60deg);
  -webkit-transform: rotate(-60deg);
  visibility: visible;
  background-color: #fff;
  background-size: 100% 100%;
}

.boxFF, .boxSS, .boxTT, .overlay {
  width: 540rpx;
  height: 620rpx;
  overflow: hidden;
}

.boxFF {
  position: absolute;
  top: 12rpx;
  left: -12rpx;
  transform: rotate(120deg);
  float: left;
  margin-left: 10px;
  -ms-transform: rotate(120deg);
  -moz-transform: rotate(120deg);
  -webkit-transform: rotate(120deg);
}

.boxSS {
  transform: rotate(-60deg);
  -ms-transform: rotate(-60deg);
  -moz-transform: rotate(-60deg);
  -webkit-transform: rotate(-60deg);
}

.boxTT {
  transform: rotate(-60deg);
  background: no-repeat 50% center;
  -ms-transform: rotate(-60deg);
  -moz-transform: rotate(-60deg);
  -webkit-transform: rotate(-60deg);
  visibility: visible;
  background-color: #fff;
  background-size: 100% 100%;
}

.logs {
  position: absolute;
  top: 130rpx;
  left: 50%;
  transform: translate(-50%, 0);
  width: 209rpx;
  height: 175rpx;
}

.tex, .texs, .texts {
  position: absolute;
  color: #333;
  z-index: 10;
  width: 100%;
  text-align: center;
  left: 50%;
  transform: translate(-50%, 0);
}

.tex {
  top: 344rpx;
  font-size: 44rpx;
}

.texs {
  top: 464rpx;
  font-size: 36rpx;
}

.texts {
  font-size: 16rpx;
  top: 508rpx;
  font-weight: 600;
  color: #666;
}

.lButton, .rButton, .runBtn {
  position: absolute;
  bottom: 214rpx;
  color: #fff;
  border: 1px solid #fff;
  border-radius: 29rpx;
  width: 209rpx;
  height: 59rpx;
  font-size: 30rpx;
  text-align: center;
  line-height: 59rpx;
}

.lButton {
  left: 80rpx;
}

.rButton {
  right: 80rpx;
}

.runBtn {
  left: 269rpx;
}

.item {
  font-size: 22rpx;
  position: absolute;
  bottom: 130rpx;
  left: 0;
  width: 100%;
  text-align: center;
  color: #fff;
}
