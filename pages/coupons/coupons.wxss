page {
  height: 100%;
}

.CA-content {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 100%;
}

.calendar {
  width: 100%;
  background: #fff;
}

.Cbanner {
  width: 750rpx;
  height: 100%;
}

.swiper-box {
  width: 100%;
  height: 100%;
}

.logs {
  position: absolute;
  left: 38rpx;
  top: 32rpx;
  width: 128rpx;
  height: 80rpx;
}

.rule {
  position: absolute;
  right: 46rpx;
  top: 76rpx;
  width: auto;
  height: 36rpx;
  border-bottom: 1px solid #fff;
  color: #fff;
  font-size: 26rpx;
  text-align: center;
  font-weight: 600;
  z-index: 9999;
}

.Sixborder {
  position: absolute;
  left: 80rpx;
  top: 94rpx;
  width: 587rpx;
  height: 694rpx;
}

.boxF, .boxS, .boxT, .overlay {
  width: 554rpx;
  height: 640rpx;
  overflow: hidden;
}

.boxF {
  position: absolute;
  top: 120rpx;
  left: 82rpx;
  transform: rotate(120deg);
  float: left;
  margin-left: 10px;
  -ms-transform: rotate(120deg);
  -moz-transform: rotate(120deg);
  -webkit-transform: rotate(120deg);
}

.boxS {
  transform: rotate(-60deg);
  -ms-transform: rotate(-60deg);
  -moz-transform: rotate(-60deg);
  -webkit-transform: rotate(-60deg);
}

.boxT {
  transform: rotate(-60deg);
  background: no-repeat 50% center;
  -ms-transform: rotate(-60deg);
  -moz-transform: rotate(-60deg);
  -webkit-transform: rotate(-60deg);
  visibility: visible;
  background-color: #fff;
  background-size: 100% 100%;
}

.boxFF, .boxSS, .boxTT, .overlay {
  width: 540rpx;
  height: 620rpx;
  overflow: hidden;
}

.boxFF {
  position: absolute;
  top: 12rpx;
  left: -12rpx;
  transform: rotate(120deg);
  float: left;
  margin-left: 10px;
  -ms-transform: rotate(120deg);
  -moz-transform: rotate(120deg);
  -webkit-transform: rotate(120deg);
}

.boxSS {
  transform: rotate(-60deg);
  -ms-transform: rotate(-60deg);
  -moz-transform: rotate(-60deg);
  -webkit-transform: rotate(-60deg);
}

.boxTT {
  transform: rotate(-60deg);
  background: no-repeat 50% center;
  -ms-transform: rotate(-60deg);
  -moz-transform: rotate(-60deg);
  -webkit-transform: rotate(-60deg);
  visibility: visible;
  background-image: url('http://gz.wauwo.net/miniAPP/resources/img/weixin/d1.png');
  background-size: 100% 100%;
  position: relative;
}

.PPF {
  position: absolute;
  left: 0rpx;
  top: 50%;
  transform: translate(0, -50%);
  height: 308rpx;
  width: 100%;
  border-top: 1rpx solid #ae43a6;
  border-bottom: 1rpx solid #ae43a6;
}

.PPF view {
  width: 33.05%;
  height: 100%;
  background: #fff;
  border-left: 1rpx solid #ae43a6;
  float: left;
  background-size: 100% 100%;
}

.PPF view:nth-child(1) {
  border-left: 0;
}

.tex, .texs, .texts {
  position: absolute;
  color: #fff;
  z-index: 10;
  width: 100%;
  text-align: center;
  left: 50%;
  transform: translate(-50%, 0);
}

.tex {
  bottom: 294rpx;
  font-size: 44rpx;
}

.texs {
  bottom: 230rpx;
  font-size: 36rpx;
}

.texts {
  font-size: 15rpx;
  bottom: 200rpx;
}
