<view class="CA-content">
  <view class='calendar'>
    <image class='Cbanner' src='http://bolaa.wauwo.net/WXimages/c1.png'></image>
    <text class='month'>6月<text class='day'>6日</text></text>
    <text class='rule'>活动规则</text>
    <view class='weekB'>
      <block wx:for="{{array}}">
        <text class='week'>{{item.message}}</text>
      </block>
    </view>
  </view>
  <view class='items'>
    <image src='http://bolaa.wauwo.net/WXimages/c3.png'></image>
    <text class='itemss' decode="{{true}}">坚持事项 &nbsp;&nbsp;（如：跑步）</text>
    <text class='time'>2018年6月5日</text>
    <text class='convert' wx-if="{{done}}" bindtap="onDoneTap">去完成</text>
    <text class='sign' wx-if="{{sing}}">已签到</text>
  </view>
</view>