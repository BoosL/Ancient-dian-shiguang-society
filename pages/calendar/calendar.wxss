.CA-content {
  position: relative;
  display: flex;
  flex-direction: column;
}

.calendar {
  width: 100%;
  height: 770rpx;
  background: #fff;
}

.Cbanner {
  width: 100%;
  height: 150rpx;
}

.month {
  position: absolute;
  left: 42rpx;
  top: 16rpx;
  color: #fff;
  font-size: 60rpx;
}

.day {
  margin-left: 22rpx;
  font-size: 20rpx;
}

.rule {
  position: absolute;
  right: 24rpx;
  top: 30rpx;
  width: auto;
  height: 36rpx;
  border-bottom: 1px solid #fff;
  color: #fff;
  font-size: 26rpx;
  text-align: center;
  font-weight: 600;
  z-index: 9999;
}

.weekB {
  position: absolute;
  top: 110rpx;
  left: -20rpx;
  color: #fff;
  font-size: 20rpx;
  width: 100%;
}

.week {
  margin-left: 84rpx;
}

.calendarlist {
  position: relative;
  top: -10rpx;
  height: 600rpx;
  width: 100%;
}



.listday {
  position: relative;
  left: -20rpx;
  width: 39rpx;
  height: 34rpx;
  float: left;
  margin-left: 66rpx;
  margin-top: 80rpx;
  font-size: 32rpx;
  color: #333;
  box-sizing: border-box;
  text-align: right;
  background-size: cover;
}

.items {
  position: relative;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 134rpx;
  margin-top: 20rpx;
  background: #fff;
}

.items image {
  margin-top: 34rpx;
  margin-left: 44rpx;
  width: 65rpx;
  height: 64rpx;
}

.itemss, .time {
  position: absolute;
  left: 128rpx;
  top: 34rpx;
  font-size: 32rpx;
  color: #333;
}

.time {
  top: 76rpx;
  font-size: 24rpx;
  color: #999;
}

.sign, .convert {
  position: absolute;
  top: 42rpx;
  right: 50rpx;
  font-size: 22rpx;
  width: 146rpx;
  height: 48rpx;
  border: 1px solid #999;
  border-radius: 30rpx;
  text-align: center;
  line-height: 48rpx;
  color: #999;
}

.convert {
  border: 1px solid #ffd800;
  background-color: #ffd800;
  color: #fff;
}
