page {
  background-color: #f4f4f4;
}

.CA-content {
  position: relative;
  display: flex;
  flex-direction: column;
}

.calendar {
  width: 100%;
  height: 770rpx;
  background: #fff;
}

.Cbanner {
  width: 100%;
  height: 150rpx;
}

.month {
  position: absolute;
  left: 42rpx;
  top: 16rpx;
  color: #fff;
  font-size: 60rpx;
}

.day {
  margin-left: 22rpx;
  font-size: 20rpx;
}

.rule {
  position: absolute;
  right: 42rpx;
  top: 42rpx;
  width: 92rpx;
  height: 30rpx;
  border-bottom: 1px solid #fff;
  color: #fff;
  font-size: 22rpx;
}

.weekB {
  position: absolute;
  top: 110rpx;
  left: -20rpx;
  color: #fff;
  font-size: 20rpx;
  width: 100%;
}

.week {
  margin-left: 84rpx;
}

.items{
  position: relative;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 134rpx;
  margin-top: 20rpx;
  background: #fff;
}

.items image {
  margin-top: 34rpx;
  margin-left: 44rpx;
  width: 65rpx;
  height: 64rpx;
}



.itemss,  .time {
  position: absolute;
  left: 128rpx;
  top: 34rpx;
  font-size: 32rpx;
  color: #333;
}

.time {
  top: 76rpx;
  font-size: 24rpx;
  color: #999;
}

.sign, .convert {
  position: absolute;
  top: 42rpx;
  right: 50rpx;
  font-size: 22rpx;
  width: 146rpx;
  height: 48rpx;
  border: 1px solid #999;
  border-radius: 30rpx;
  text-align: center;
  line-height: 48rpx;
  color: #999;
}

.convert {
  border: 1px solid #ffd800;
  background-color: #ffd800;
  color: #fff;
}
